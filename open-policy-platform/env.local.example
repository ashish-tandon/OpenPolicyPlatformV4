# ðŸš€ Open Policy Platform V4 - Local Development Environment
# Copy this file to .env.local and modify as needed

# Database Configuration
DATABASE_URL=postgresql://openpolicy:openpolicy123@localhost:5432/openpolicy
POSTGRES_DB=openpolicy
POSTGRES_USER=openpolicy
POSTGRES_PASSWORD=openpolicy123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
ENVIRONMENT=development
LOG_LEVEL=DEBUG
DEBUG=true

# API Configuration
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Local Storage (MinIO - S3 compatible)
STORAGE_URL=http://localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minio123

# Local Vault (Secrets Management)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=vault123

# Local Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Authentication (Local Development)
JWT_SECRET=local-development-secret-key-for-jwt-tokens
AUTH0_DOMAIN=local
AUTH0_CLIENT_ID=local
AUTH0_CLIENT_SECRET=local
AUTH0_AUDIENCE=local

# Service URLs (Local Development)
API_URL=http://localhost:8000
AUTH_SERVICE_URL=http://localhost:8001
POLICY_SERVICE_URL=http://localhost:8002
DATA_MANAGEMENT_SERVICE_URL=http://localhost:8003
SEARCH_SERVICE_URL=http://localhost:8004
SCRAPER_SERVICE_URL=http://localhost:9008

# Scraper Configuration
SCRAPER_INTERVAL=300
SCRAPER_REPORTS_DIR=/app/reports
SCRAPER_LOGS_DIR=/app/logs
SCRAPER_WORKERS=3
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY=1.0
USER_AGENT=OpenPolicyScraper/1.0
TIMEOUT_SECONDS=30

# Web Frontend
VITE_API_URL=http://localhost:8000
VITE_APP_NAME=Open Policy Platform (Local)
VITE_STORAGE_URL=http://localhost:9000

# Monitoring
PROMETHEUS_RETENTION_TIME=200h
GRAFANA_ADMIN_PASSWORD=admin

# MinIO Console
MINIO_CONSOLE_URL=http://localhost:9001
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minio123

# Service Ports
POSTGRES_PORT=5432
REDIS_PORT=6379
API_PORT=8000
WEB_PORT=3000
AUTH_PORT=8001
POLICY_PORT=8002
DATA_MANAGEMENT_PORT=8003
SEARCH_PORT=8004
SCRAPER_PORT=9008
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001
VAULT_PORT=8200
ELASTICSEARCH_PORT=9200
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
